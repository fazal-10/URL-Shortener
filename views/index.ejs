<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>

<body>
    <div class="container">
        <!-- Page Heading -->
        <h1 class="mt-3">URL Shrinker</h1>
        
        <!-- URL Submission Form -->
        <form action="/shortUrls" method="POST" class="my-4 row row-cols-lg-auto g-2 align-items-center">
            <div class="d-flex mb-2">
                <div class="form-outline me-3" style="width: 14rem">
                    <!-- Input field to enter the full URL -->
                    <label for="fullUrl" class="visually-hidden">URL</label>
                    <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" required class="form-control mr-2">
                </div>
                <div>
                    <!-- Button to submit the URL and create a short URL -->
                    <button type="submit" class="btn btn-success">Shrink</button>
                </div>
            </div>
        </form>

        <!-- Table to Display Short URLs -->
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <!-- Table header for full URL column -->
                    <th>Full URL</th>
                    <!-- Table header for short URL column -->
                    <th>Short URL</th>
                    <!-- Table header for clicks count column -->
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through the list of short URLs and display each one in a table row -->
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <!-- Table cell to display the full URL as a clickable link -->
                        <td>
                            <a href="<%= shortUrl.full %>" target="_blank">
                                <%= shortUrl.full %>
                            </a>
                        </td>
                        <!-- Table cell to display the short URL as a clickable link -->
                        <td>
                            <a href="<%= shortUrl.short %>" target="_blank">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                        <!-- Table cell to display the number of clicks for the short URL -->
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
